<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
    <link rel="stylesheet" href="estilos.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <h1>Lista de Usuarios</h1>
    </header>

    <a class="botonNuevo" href="/cliente/nuevo">Agregar nuevo cliente</a>

    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>CI</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Celular</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% clientes.forEach(cliente => { %>
                    <tr>
                        <td><%= cliente.ci %></td>
                        <td><%= cliente.nombres %></td>
                        <td><%= cliente.apellidos %></td>
                        <td><%= cliente.celular %></td>
                        <td><%= cliente.correo %></td>
                        <td class="actions">
                            <a href="/clientes/<%= cliente._id %>"><i class="bi bi-eye-fill"></i></a>
                            <a href="/clientes/<%= cliente._id %>/editar"><i class="bi bi-pen-fill"></i></a>
                            <form action="/clientes/<%= cliente._id %>?_method=DELETE" method="POST">
                                <button class="botonEliminar" type="submit"><i class="bi bi-x-circle-fill"></i></button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>